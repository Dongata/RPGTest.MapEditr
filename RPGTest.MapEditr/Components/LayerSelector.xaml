<UserControl x:Class="RPGTest.MapEditr.Components.LayerSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RPGTest.MapEditr.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <RadioButton Content="Ground Layer"
                     Grid.Row="0"
                     GroupName="Layers"
                     IsChecked="True"
                     Checked="GroundLayerChecked"/>
        <RadioButton Content="Middle Layer"
                     Grid.Row="1"
                     GroupName="Layers"
                     Checked="MiddleLayerChecked"/>
        <RadioButton Content="Top Layer"
                     Grid.Row="2"
                     GroupName="Layers" 
                     Checked="TopLayerChecked"/>
    </Grid>
</UserControl>
